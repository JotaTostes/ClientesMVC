@model Clientes.Mvc.Models.ClienteViewModel

<h2>Novo Cliente</h2>

<form id="form-create-cliente">
	<div class="mb-3">
		<label asp-for="RazaoSocial"></label>
		<input asp-for="RazaoSocial" class="form-control" />
		<span asp-validation-for="RazaoSocial" class="text-danger"></span>
	</div>
    <div class="mb-3">
        <label asp-for="NomeFantasia"></label>
        <input asp-for="NomeFantasia" class="form-control" />
        <span asp-validation-for="NomeFantasia" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TipoPessoa"></label>
        <select asp-for="TipoPessoa" class="form-control">
            <option value="F">Pessoa Física</option>
            <option value="J">Pessoa Jurídica</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Documento"></label>
        <input asp-for="Documento" class="form-control" />
        <span asp-validation-for="Documento" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Endereco"></label>
        <input asp-for="Endereco" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Complemento"></label>
        <input asp-for="Complemento" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Bairro"></label>
        <input asp-for="Bairro" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Cidade"></label>
        <input asp-for="Cidade" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="UF"></label>
        <input asp-for="UF" maxlength="2" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="CEP"></label>
        <input asp-for="CEP" class="form-control" />
    </div>

	<h4>Telefones</h4>
	<table class="table" id="tabela-telefones">
		<thead>
			<tr>
				<th>Número</th>
				<th>Tipo</th>
				<th>Ações</th>
			</tr>
		</thead>
		<tbody>
		</tbody>
	</table>
	<button type="button" class="btn btn-primary" id="btn-add-telefone">Adicionar Telefone</button>

	<br /><br />
	<button type="submit" class="btn btn-success">Salvar</button>
	<a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>

<table style="display:none">
	<tbody>
		<tr id="template-telefone">
			<td><input name="Telefones[0].NumeroTelefone" class="form-control" /></td>
			<td>
				<select name="Telefones[0].CodigoTipoTelefone" class="form-control tipo-telefone"></select>

			</td>
			<td>
				<button type="button" class="btn btn-danger btn-remove-telefone">Remover</button>
			</td>
		</tr>
	</tbody>
</table>

@section Scripts {
	<script src="~/js/telefones.js" asp-append-version="true"></script>
}
