@model IEnumerable<Clientes.Mvc.Models.ClienteViewModel>

<h2>Lista de Clientes</h2>

<a asp-controller="Clientes" asp-action="Create" class="btn btn-primary">Novo Cliente</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Razão Social</th>
            <th>Nome Fantasia</th>
            <th>Documento</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.RazaoSocial</td>
                    <td>@cliente.NomeFantasia</td>
                    <td>@cliente.Documento</td>
                    <td>
                        <a asp-controller="Clientes" asp-action="Edit" asp-route-id="@cliente.CodigoCliente" class="btn btn-sm btn-warning">Editar</a>

                        <button class="btn btn-sm btn-danger btn-excluir-ajax"
                                data-id="@cliente.CodigoCliente"
                                data-nome="@cliente.RazaoSocial">
                            Excluir
                        </button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">Nenhum cliente encontrado.</td>
            </tr>
        }
    </tbody>
</table>


