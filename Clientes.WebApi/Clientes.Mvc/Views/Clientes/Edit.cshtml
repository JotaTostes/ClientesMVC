@model Clientes.Mvc.Models.ClienteViewModel

<h2>Editar Cliente</h2>

<form id="form-edit-cliente">
    <input type="hidden" asp-for="CodigoCliente" />

    <div class="mb-3">
        <label asp-for="RazaoSocial"></label>
        <input asp-for="RazaoSocial" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="NomeFantasia"></label>
        <input asp-for="NomeFantasia" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="TipoPessoa"></label>
        <select asp-for="TipoPessoa" class="form-control">
            <option value="F" selected="@("F" == Model.TipoPessoa)">Pessoa Física</option>
            <option value="J" selected="@("J" == Model.TipoPessoa)">Pessoa Jurídica</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Documento"></label>
        <input asp-for="Documento" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Endereco"></label>
        <input asp-for="Endereco" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Cidade"></label>
        <input asp-for="Cidade" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="UF"></label>
        <input asp-for="UF" maxlength="2" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="CEP"></label>
        <input asp-for="CEP" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>
